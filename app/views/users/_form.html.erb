<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :netid %>
    <%= form.text_field :netid, id: :user_netid %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label :role %>
    <%= form.select :role, User.roles.map { |role, value| [role.humanize, role] }, id: :user_role %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
