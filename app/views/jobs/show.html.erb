<% @job.employee_hours.each do |employee_hours| %>
	<div>
		<p>
		<%= employee_hours.hours %> x <%= humanized_money_with_symbol employee_hours.cost_per_hour %> = <%= humanized_money_with_symbol employee_hours.hours*employee_hours.cost_per_hour %>
		</p>
		Charge? <%= employee_hours.charge? %>
	</div>
<% end %>

<%= render partial: 'employee_hours/form', locals: { employee_hour: @job.employee_hours.new } %>

<%= link_to 'Edit', edit_job_path(@job) %> |
