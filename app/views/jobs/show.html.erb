<p>
  <strong>Title:</strong>
  <%= @job.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @job.description %>
</p>

<p>
  <strong>Job number:</strong>
  <%= @job.job_number %>
</p>

<p>
  <strong>Job type:</strong>
  <%= @job.job_type %>
</p>

<p>
  <strong>Artist approval:</strong>
  <%= @job.artist_approval %>
</p>

<p>
  <strong>Editor approval:</strong>
  <%= @job.editor_approval %>
</p>

<p>
  <strong>Vendor approval:</strong>
  <%= @job.vendor_approval %>
</p>

<p>
  <strong>Client:</strong>
